<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/row_payment_explanation_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="Payment for taxi"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/row_payment_account_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_payment_explanation_textview"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="ASDSADWQE213213"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/row_payment_sum_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="23 $"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/row_payment_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_payment_sum_textview"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="25/07/2015"
        android:ellipsize="end"/>

</RelativeLayout>